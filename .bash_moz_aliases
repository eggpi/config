function alias_stumbler() {
    # set power status on the emulator
    function pstatus() {
        echo -e "power status $1\n" | nc --close localhost 5554;
    }

    # set power capacity on the emulator
    function pcap() {
        echo -e "power capacity $1\n" | nc --close localhost 5554;
    }

    # set emulator to use ac power or not
    function pac() {
        echo -e "power ac $1\n" | nc --close localhost 5554;
    }
}

function alias_wimf() {
    alias b="(cd ~/code/gaia; make clean && make profile)"

    alias r="./mach run -profile ~/code/gaia/profile/ -jsconsole"
    alias rw="r --runapp WhereIsMyFox?"

    alias br="b && r"
    alias brw="b && rw"
}

function alias_seer() {
    PROFILE_BZ2_PATH=$HOME/code/seer.ffp.tar.bz2
    PROFILE_DIR_NAME=7ngf1md9.seer
    PROFILE_PATH=/tmp

    alias b="rm -rf $PROFILE_PATH/$PROFILE_DIR_NAME &&
             tar -xjf $PROFILE_BZ2_PATH -C $PROFILE_PATH"
    alias r="./mach run -profile $PROFILE_PATH/$PROFILE_DIR_NAME"
    alias br="b && r"
}
